server {
  listen 80;
  server_name {{ domain }};
  server_tokens off;

  include certbot.conf;

  location / {
    proxy_set_header	X-Real-IP $remote_addr;
    proxy_pass		http://{{ domain }}:8000;
  }

  
  location /api/ {
    proxy_set_header	X-Real-IP $remote_addr;
    proxy_pass		http://{{ domain }}:8000;
  }
  

#  location / {
#    rewrite ^ https://$server_name$request_uri;
#  }

}

server {
  listen 443;
  server_name {{ domain }};
  server_tokens off;

  include ssl.conf;
  
  ssl_certificate           {{ ssl_crt }};
  ssl_certificate_key       {{ ssl_key }};
  
  location / {
    proxy_set_header X-Real-IP $remote_addr;
    proxy_pass http://nginx;
  }  
